# Use an official Python runtime as a parent image
FROM python:3.10-slim

# Set the working directory in the container
WORKDIR /app

# Copy the requirements file into the container
COPY requirements.txt /app/

# Install any needed packages specified in requirements.txt
# Using --no-cache-dir to reduce image size
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy the main.py file into the container
COPY main.py /app/

# Debug: List contents of /app to verify files
RUN ls -la /app/

# Make port 8000 available to the world outside this container
EXPOSE 8000

# Define environment variable for Python to write output immediately
ENV PYTHONUNBUFFERED=1

# Define the command to run your app using uvicorn with debug logging
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--log-level", "debug"]